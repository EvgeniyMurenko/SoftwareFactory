CREATE TABLE `s_messages` (
	`id` INT NOT NULL,
	`user_id` INT NOT NULL,
	`manager_id` INT NOT NULL,
	`message_time` DATETIME NOT NULL,
	`message_text` TEXT NOT NULL,
	PRIMARY KEY (`id`)
);

CREATE TABLE `s_projects` (
	`id` INT NOT NULL,
	`name` INT NOT NULL AUTO_INCREMENT,
	`case_list` INT NOT NULL,
	PRIMARY KEY (`id`)
);

CREATE TABLE `s_users_projects_list` (
	`user_id` INT NOT NULL,
	`project_id` INT NOT NULL
);

CREATE TABLE `s_cases` (
	`id` BINARY NOT NULL,
	`project_id` INT NOT NULL,
	`manager_id` BINARY NOT NULL,
	`title` TEXT NOT NULL,
	`status` INT NOT NULL,
	`progress` INT NOT NULL,
	`date_create` DATETIME NOT NULL,
	`case_list_message` TEXT NOT NULL,
	PRIMARY KEY (`id`)
);

CREATE TABLE `app_users` (
	`id` BINARY NOT NULL,
	`sso_id` INT NOT NULL,
	`email` VARCHAR(255) NOT NULL,
	`password` VARCHAR(255) NOT NULL,
	PRIMARY KEY (`id`)
);

CREATE TABLE `s_manager_info` (
	`user_id` INT NOT NULL,
	`first_name` VARCHAR(255) NOT NULL,
	`last_name` VARCHAR(255) NOT NULL,
	`estimate_list` VARCHAR(255) NOT NULL,
	`project_list` VARCHAR(255) NOT NULL
);

CREATE TABLE `s_customer_info` (
	`user_id` INT NOT NULL,
	`first_name` VARCHAR(255) NOT NULL,
	`last_name` VARCHAR(255) NOT NULL,
	`company` VARCHAR(255) NOT NULL,
	`avatar` VARCHAR(255) NOT NULL,
	`user_projects_list` VARCHAR(255) NOT NULL
);

CREATE TABLE `s_case_message_list` (
	`cases_id` INT NOT NULL,
	`message_id` INT NOT NULL
);

CREATE TABLE `s_estimates` (
	`id` BINARY NOT NULL,
	`name` VARCHAR(255) NOT NULL,
	`email` VARCHAR(255) NOT NULL,
	`estimate_request` TEXT NOT NULL,
	`status` INT NOT NULL,
	`date_request` DATETIME NOT NULL,
	PRIMARY KEY (`id`)
);

CREATE TABLE `s_manager_estimate_list` (
	`manager_id` BINARY NOT NULL,
	`estimate_id` BINARY NOT NULL
);

CREATE TABLE `s_manager_project` (
	`manager_id` BINARY NOT NULL,
	`project_id` BINARY NOT NULL
);

CREATE TABLE `user_profile` (
	`id` INT NOT NULL,
	`type` VARCHAR(255) NOT NULL,
	PRIMARY KEY (`id`)
);

CREATE TABLE `app_user_user_profile` (
	`user_id` INT NOT NULL,
	`user_profile_id` INT NOT NULL
);
